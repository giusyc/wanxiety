---
import Layout from "@layouts/Default.astro";
import RecentBlogPosts from "@components/generic/RecentBlogPosts.astro";
import MobileSocials from "@components/home/MobileSocials.astro";
import { Pill } from "@eliancodes/brutal-ui";
import { Button } from "@eliancodes/brutal-ui";
import { Card } from "@eliancodes/brutal-ui";

const builtWith = [
  { name: "Tech", url: "./careers/" },
  {
    name: "Medicine",
    url: "https://docs.astro.build/en/guides/integrations-guide/sitemap/",
  },
  { name: "AI & ML", url: "./blog/blogpost-1/" },
  { name: "Law", url: "https://vercel.com" },
  { name: "Law Enforcement", url: "https://www.typescriptlang.org/" },
  { name: "Nutrition and Fitness", url: "https://www.typescriptlang.org/" },
  {
    name: "Sales",
    url: "https://docs.astro.build/en/guides/content-collections/",
  },
  { name: "Science", url: "https://www.typescriptlang.org/" },
  { name: "Education", url: "https://www.typescriptlang.org/" },
  { name: "Advertising", url: "https://www.typescriptlang.org/" },

  { name: "Marketing", url: "https://www.typescriptlang.org/" },
  { name: "Blogger", url: "https://docs.astro.build/en/guides/rss/" },

  { name: "Cyber Security", url: "https://www.typescriptlang.org/" },
  { name: "Fashion", url: "https://docs.astro.build/en/guides/rss/" },
  {
    name: "Government",
    url: "https://docs.astro.build/en/guides/rss/",
  },
];
---

<Layout
  title="Home"
  pageTitle="Bye Wanxiety |Â Home"
  description="A safe place to help with work anxiety and career transitions."
>
  <main class="bg-pink p-6">
    <MobileSocials />
    <section id="about" class="grid md:grid-cols-8 gap-8 mt-4">
      <h2 class="hidden">About Brutal</h2>
      <div class="col-span-4">
        <Card>
          <div class="flex flex-col justify-between items-start gap-4">
            <p class="mt-4 outfit text-2xl md:text-5xl lg:text-7xl">
              What is <a
                class="text-white"
                target="_blank"
                href="https://www.webmd.com/anxiety-panic/features/workplace-anxiety"
                >Wanxiety?</a
              >
            </p>
            <p class="mt-2 outfit text-xl md:text-2xl lg:text-3xl">
              Work anxiety is a feeling of stress, worry, or nervousness
              specifically related to job responsibilities, work environment, or
              workplace interactions.
            </p>
            <Button
              href="https://www.webmd.com/anxiety-panic/features/workplace-anxiety"
              target="_blank"
            >
              Check out the WebMD article &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class="col-span-2">
        <Card>
          <h2 class="text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif">
            Career Paths
          </h2>
          <ul class="flex gap-4 flex-wrap">
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class="sanchez"
                      href={item.url}
                      target="_blank"
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class="col-span-2">
        <Card>
          <h2 class="text-2xl md:text-4xl lg:text-4xl mb-4 dm-serif">
            Need more info on a career path or want to be on the podcast?
          </h2>
          <p class="poppins">
            If you want information on a specific career path that we don't have or if you have an amazing story that can inspire others and want to be on the podcast,
            please reach out via Instagram or email g@wanxiety.com
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
