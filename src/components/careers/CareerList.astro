---
import type { CollectionEntry } from 'astro:content';
import CareerSummaryCard from './CareerSummaryCard.astro';

interface Props {
  careers : CollectionEntry<'careers'>[];
}

const { careers } = Astro.props;
const safeCareers = Array.isArray(careers) ? careers : [];
---

<ul class='grid md:grid-cols-2 lg:grid-cols-3 gap-8'>
  {
    safeCareers.map((career) => {
      return (
        <li>
          <CareerSummaryCard careers={career} />
        </li>
      );
    })
  }
</ul>
