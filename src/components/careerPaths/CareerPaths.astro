---
import type { CollectionEntry } from 'astro:content';

interface Props {
  careers: CollectionEntry<'careerPaths'>[];
}

const { careers } = Astro.props;
---

<ul class='grid md:grid-cols-2 lg:grid-cols-3 gap-8'>
  {
    careers.map((career) => {
      return (
        <li>
          <careerPaths career={career} />
        </li>
      );
    })
  }
</ul>